extends ../../layouts/default.pug
include ../../mixins/box-head.pug
block main 
    .container.my-3 
        .row 
            .col-12 
                .box-head 
                    +box-head("Danh sách bài hát")
        
        .row 
            each song in songs
                .col-6.mb-3
                    .song-item
                        .inner-image
                        a(href=`/songs/detail/${song.slug}`)
                            img(src=song.avatar alt="Song Image")
                        .inner-content
                        a.inner-title(href=`/songs/detail/${song.slug}`) #{song.title}
                        .inner-singer
                            i.fa-solid.fa-microphone-lines
                            | #{song.infoSinger.fullName}
                        .inner-like
                            i.fa-solid.fa-thumbs-up
                            |  #{song.like}
                        .inner-time
                            i.fa-regular.fa-clock
                            | Hôm nay

